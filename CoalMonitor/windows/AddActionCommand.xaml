<Window x:Class="CoalMonitor.windows.AddActionCommand"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoalMonitor.windows"
        mc:Ignorable="d"
        Title="AddActionCommand" Height="300" Width="300">
    <StackPanel Orientation="Vertical">
        <TextBlock>指令编号</TextBlock>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock>指令类型</TextBlock>
            <TextBlock Grid.Column="1">目标角度</TextBlock>
            <TextBlock Grid.Column="2">所需时间</TextBlock>
            <ComboBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="0,15,0,0" Grid.RowSpan="2" Width="98"
                      Name="commandBox">
                <ComboBoxItem IsSelected="True">偏航</ComboBoxItem>
                <ComboBoxItem>滚转</ComboBoxItem>
                <ComboBoxItem>俯仰</ComboBoxItem>
                <ComboBoxItem>延迟</ComboBoxItem>
            </ComboBox>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                <TextBox Name="commandAngle">0</TextBox>
                <TextBlock>度</TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal">
                <TextBox Name="commandTime">0</TextBox>
                <TextBlock>秒</TextBlock>
            </StackPanel>
        </Grid>
        <StackPanel Orientation="Horizontal">
            <Button Name="OK" Click="OK_Click">确定</Button>
            <Button Name="Cancel" Click="Cancel_Click">取消</Button>
        </StackPanel>
    </StackPanel>
</Window>
